<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.koreait.integration1.repository.searchBoard">

	<!-- 게시글 목록 반환 -->
	<select id="selectAll" resultType="com.koreait.integration1.domain.SearchBoard">
		SELECT NO, TITLE, CONTENT, REGDATE
		  FROM SEARCHBOARD
		 ORDER BY NO DESC
	</select>
	<!-- 전체 게시글 개수 반환 -->
	<select id="totalBoardList" resultType="int">
		SELECT COUNT(*)
		  FROM SEARCHBOARD
	</select>
	<!-- 게시글 검색 목록 반환 -->
	<select id="search" resultType="com.koreait.integration1.domain.SearchBoard">
		SELECT NO, TITLE, CONTENT, REGDATE
		  FROM SEARCHBOARD
		 WHERE ${column} LIKE '%' || #{query} || '%'
	</select>

</mapper>