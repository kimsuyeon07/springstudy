<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- <mapper namespace="com.koreait.apptest.dao.member"> -->
<!-- DAO가 인터페이스를 사용하게 되면 매퍼는 DAO로 지정해줘야 한다. -->
<mapper namespace="com.koreait.apptest.dao.MemberDAO"> 

	<select id="login" resultType="com.koreait.apptest.dto.Member">
		SELECT NO, ID, PW, NAME, EMAIL, REGDATE
		  FROM MEMBER
		 WHERE ID = #{id}
		   AND PW = #{pw} 
	</select>
	
	<select id="idCheck" resultType="int">
		SELECT COUNT(ID)
		  FROM MEMBER
		 WHERE ID = #{id}
	</select>
	
	<insert id="join">
		INSERT INTO MEMBER
		VALUES (MEMBER_SEQ.NEXTVAL, #{id}, #{pw}, #{name}, #{email}, SYSDATE)
	</insert>
	
	<delete id="leave">
		DELETE
		  FROM MEMBER
		 WHERE NO = #{no}
	</delete>
	
</mapper>